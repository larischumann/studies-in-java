
public class TestaCondicional {

	public static void main(String[] args) {
		System.out.println ("Testando condicionais. YAYYYY!");
		int idade = 18 ;
		int quantidadePessoas = 3;
		
		if (idade >= 18) {
			System.out.println("Você tem mais de 18 anos. Parabéns, já pode ser preso.");
			System.out.println("Seja bem vindo (a)!");
		}else {
			if (quantidadePessoas >= 2) {
				System.out.println("Você não tem 18 anos, mas pode entrar acompanhado ;)");
			}else {
				System.out.println("Infelizmente você não pode ser preso ainda :(");
			}
		}

	}

}
